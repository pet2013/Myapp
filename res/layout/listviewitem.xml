<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ListView_image"
            android:layout_margin="15dp" android:maxWidth="10dp" android:maxHeight="10dp"
            android:scaleType="centerInside" android:layout_weight="0.7"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/ListView_caption"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp" android:layout_marginLeft="15dp"/>
</LinearLayout>