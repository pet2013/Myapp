<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/AradioST_imageView" android:src="@drawable/test" android:scaleType="matrix"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/AradioST_backButton" android:layout_alignParentRight="true" android:layout_alignParentTop="true"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:id="@+id/AradioST_radioGroup"
            android:background="#999999"
            android:layout_alignParentBottom="true">
    </RadioGroup>
</RelativeLayout>